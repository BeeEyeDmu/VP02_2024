<Window x:Class="_026_grid.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:_026_grid"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="400">
  <Grid>
    <Grid.RowDefinitions>
      <RowDefinition/>
      <RowDefinition/>
      <RowDefinition/>
    </Grid.RowDefinitions>
    <Button Margin="20, 20, 20, 10" Grid.Row="0" FontSize="30">1</Button>
    <Button Margin="20 10" Grid.Row="1" FontSize="30">2</Button>
    <Button Margin="20 10 20 20" Grid.Row="2" FontSize="30">3</Button>
  </Grid>
</Window>
